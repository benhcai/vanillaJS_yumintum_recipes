require("core-js/stable");
require("regenerator-runtime/runtime");
var _model = require("./model");
var _viewRecipe = require("./viewRecipe");
var _parcelHelpers = require("@parcel/transformer-js/lib/esmodule-helpers.js");
var _viewRecipeDefault = _parcelHelpers.interopDefault(_viewRecipe);
const recipeContainer = document.querySelector(".recipe");
const controlRecipes = async function () {
  try {
    // Get URL id
    const id = window.location.hash.slice(1);
    if (!id) throw new Error("ID not found");
    // 0. Recipe loading spinner
    _viewRecipeDefault.default.renderSpinner(recipeContainer);
    // 1. Load recipe
    let myrecipe = await _model.getRecipe(id);
    // 2. Render recipe
    _viewRecipeDefault.default.render(myrecipe);
  } catch (err) {
    console.log(err);
  }
};
["hashchange", "load"].forEach(ev => {
  return window.addEventListener(ev, controlRecipes);
});
